<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Metadata>
		<![CDATA[
			[HostComponent("spark.components.VScrollBar")]
		]]>
	</fx:Metadata>
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
		<s:State name="inactive"/>
	</s:states>
	<s:Group id="scrollBar" width="44" height="100%" right="0">
		<s:Button id="track" horizontalCenter="0" width="20" top="0" bottom="0" skinClass="view.utils.scrollbarparts.Skin_VScrollBarTrack"/>
		<s:Button id="thumb" horizontalCenter="0" width="20" top="0" bottom="0" skinClass="view.utils.scrollbarparts.Skin_VScrollBarThumb"/>
	 	<s:Button id="decrementButton" left="0" top="-48" width="44" height="44" skinClass="view.utils.scrollbarparts.Skin_VScrollBarDecrementBtn"/>
		<s:Button id="incrementButton" left="0" bottom="-48" width="44" height="44" skinClass="view.utils.scrollbarparts.Skin_VScrollBarIncrementBtn"/>
	</s:Group>
</s:SparkSkin>