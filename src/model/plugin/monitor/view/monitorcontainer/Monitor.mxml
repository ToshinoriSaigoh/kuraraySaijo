<?xml version="1.0" encoding="utf-8"?>
<s:Group
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:model.plugin.monitor.controller.monitorcontainer="model.plugin.monitor.controller.monitorcontainer.*"
	>
	<fx:Style source="model/plugin/monitor/view/style.css"/>
	<fx:Declarations>
		<model.plugin.monitor.controller.monitorcontainer:Monitor id="ctrlr"/>
	</fx:Declarations>
	<s:VGroup id="monitor" styleName="monitorBg" width="100%" height="100%" gap="0">
		<s:Label id="label" name="label" width="100%" height="36" verticalAlign="middle"/>
		<s:HGroup width="100%" height="100%" gap="0">
			<s:Label id="text" name="text" width="100%" height="100%"/>
			<s:Label id="unit" name="unit" width="72" height="100%"/>
		</s:HGroup>
	</s:VGroup>
	<s:SpriteVisualElement id="body"/>
	<s:Rect width="100%" height="100%" top="2" right="2" bottom="2" left="2">
		<s:stroke>
			<s:SolidColorStroke color="0xffffff" weight="1" alpha="0.5"/>
		</s:stroke>
	</s:Rect>
</s:Group>