<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:kuraraysaijo.view.documentroot.reportscreen.sidebar.settingsbox="kuraraysaijo.view.documentroot.reportscreen.sidebar.settingsbox.*"
	xmlns:kuraraysaijo.controller.documentroot.reportscreen.sidebar.settingsbox="kuraraysaijo.controller.documentroot.reportscreen.sidebar.settingsbox.*"
>
	<fx:Declarations>
		<kuraraysaijo.controller.documentroot.reportscreen.sidebar.settingsbox:SettingsKuraraySaijoContainer id="ctrlr"/>
	</fx:Declarations>
	<s:SpriteVisualElement id="body"/>
	<s:Scroller id="scroller" width="100%" height="100%" top="20" bottom="80" left="4" right="4" verticalScrollPolicy="on" skinClass="view.documentroot.reportscreen.sidebar.settingsbox.Skin_VScroller">
		<s:VGroup top="10" bottom="10" left="10" right="10" width="640" height="100%" gap="20">
			<s:HGroup gap="0">
				<s:Group width="200">
					<s:Label id="dutyHead"/>
				</s:Group>
				<s:VGroup width="440" gap="8">
					<s:Button id="setBaseDateBtn" label="本日を基準日に設定する" name="importScheduleBtn" width="340" height="44" skinClass="view.utils.Skin_BtnText"/>
					<s:HGroup gap="10">
						<s:Label text="基準日：" width="80" height="40"/>
						<s:Label id="dutyBaseDate" text="{ctrlr.baseDateText}"/>
					</s:HGroup>
					<s:Label id="designingPersonList"/>
					<s:TextArea id="textAreaDesigningPersonList" width="330" height="330"/>
					<s:Label id="pipePersonList"/>
					<s:TextArea id="textAreaPipePersonList" width="330" height="330"/>
					<s:Label id="electricPersonList"/>
					<s:TextArea id="textAreaElectricPersonList" width="330" height="330"/>
				</s:VGroup>
			</s:HGroup>
			<s:Line left="0" right="0" xFrom="0" xTo="640" yFrom="0" yTo="0"><s:stroke><s:SolidColorStroke color="0x888888" weight="2"/></s:stroke></s:Line>
			<s:HGroup gap="0">
				<s:Group width="200">
					<s:Label id="noAccidentAllHead"/>
				</s:Group>
				<s:VGroup width="440" gap="8">
					<s:Label id="noAccidentAllTotal"/>
					<s:TextInput id="inputNoAccidentAllTotal" width="330"/>
					<s:Label id="noAccidentAllStartDate"/>
					<s:TextInput id="inputNoAccidentAllStartDate" width="330"/>
				</s:VGroup>
			</s:HGroup>
			<s:Line left="0" right="0" xFrom="0" xTo="640" yFrom="0" yTo="0"><s:stroke><s:SolidColorStroke color="0x888888" weight="2"/></s:stroke></s:Line>
			<s:HGroup gap="0">
				<s:Group width="200">
					<s:Label id="noAccidentDeptHead"/>
				</s:Group>
				<s:VGroup width="440" gap="8">
					<s:Label id="noAccidentDeptTotal"/>
					<s:TextInput id="inputNoAccidentDeptTotal" width="330"/>
					<s:Label id="noAccidentDeptStartDate"/>
					<s:TextInput id="inputNoAccidentDeptStartDate" width="330"/>
				</s:VGroup>
			</s:HGroup>


			<s:Line left="0" right="0" xFrom="0" xTo="640" yFrom="0" yTo="0"><s:stroke><s:SolidColorStroke color="0x888888" weight="2"/></s:stroke></s:Line>
			<s:Button id="importHolidayBtn" label="カレンダーインポート" name="importHolidayBtn" width="240" height="44" skinClass="view.utils.Skin_BtnText"/>
			<s:Line left="0" right="0" xFrom="0" xTo="640" yFrom="0" yTo="0"><s:stroke><s:SolidColorStroke color="0x888888" weight="2"/></s:stroke></s:Line>
			<s:Button id="importScheduleBtn" label="スケジュールインポート" name="importScheduleBtn" width="240" height="44" skinClass="view.utils.Skin_BtnText"/>
			<s:Line left="0" right="0" xFrom="0" xTo="640" yFrom="0" yTo="0"><s:stroke><s:SolidColorStroke color="0x888888" weight="2"/></s:stroke></s:Line>
		</s:VGroup>
	</s:Scroller>
	<s:Group bottom="10">
		<s:Button id="saveBtn" name="saveBtn" width="120" height="44" left="200" skinClass="view.utils.Skin_BtnText"/>
	</s:Group>
</s:NavigatorContent>